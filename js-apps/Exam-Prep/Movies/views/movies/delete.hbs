{{>header}}
<div id="deleteMovie">
    <h1>Delete movie</h1>
    <form action="#/movie/delete/{{data._id}}" method="POST">
        <label>Title</label>
        <input type="text" name="title" value="{{data.title}}" disabled="">
        <label>Image Url</label>
        <input type="text" name="imageUrl"
            value="{{data.imageUrl}}"
            disabled="">
        <label>Description</label>
        <textarea type="text" name="description"
            disabled="">{{data.description}}</textarea>
        <label>Genres</label>
        <input type="text" name="genres" value="{{data.genres}}" disabled="">
        <label>Available Tickets</label>
        <input type="number" name="tickets" value="{{data.tickets}}" disabled="">
        <input type="submit" value="Delete">
    </form>
</div>
{{>footer}}